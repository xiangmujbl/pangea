<adf-curation xmlns="http://www.jnj.com/adf-curation">
    <curation mainRegion="/sample/user" viewRegion="/sample/user_info" chunkSize="1000" partitionPerServer="2"
              chunkBytes="40096" parallelism="2">
        <regions>
            <!--declare main region and refs-->
            <region path="/sample/user">
                <columns>id,name</columns>
                <relations>
                    <relation path="/sample/info" isPrimaryKey="false">
                        <expression>userId=/sample/user.id</expression>
                    </relation>
                </relations>
            </region>
            <!--declare ref region-->
            <region path="/sample/info">
                <columns>userId,phone</columns>
            </region>
            <!--declare view region-->
            <region path="/sample/user_info">
                <columns>id,name,phone</columns>
            </region>
        </regions>
    </curation>
</adf-curation>