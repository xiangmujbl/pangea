              executionClassName="com.jnj.pangea.plan.cns_material_plan_status.controller.PlanCnsMaterialPlanStatusController">
        <regions>

            <region path="/edm/material_plant_v1">
                <columns>
                    localMaterialNumber,localPlant,materialNumber,localMrpType,localPlantStatus,localMrpController
                </columns>
                <relations>
                    <relation path="/edm/source_system_v1">
                        <expression></expression>
                    </relation>
                    <relation path="/edm/material_global_v1">
                        <expression>localMaterialNumber=/edm/material_plant_v1.localMaterialNumber</expression>
                    </relation>
                    <relation path="/plan/cns_plan_parameter">
                        <expression></expression>
                    </relation>
                    <relation path="/plan/cns_material_incl">
                        <expression>
                            localMaterialNumber=/edm/material_plant_v1.localMaterialNumber,
                            localPlant=/edm/material_plant_v1.localPlant
                        </expression>
                    </relation>
                </relations>
            </region>

            <region path="/edm/source_system_v1">
                <columns>localSourceSystem,localSourceSystemName,sourceSystem,sourceSystemName</columns>
            </region>

            <region path="/edm/material_global_v1">
                <columns>
                    localMaterialType,localMaterialNumber,localDpParentCode,primaryPlanningCode,division,flagForDeletion
                </columns>
            </region>

            <region path="/plan/cns_plan_parameter">
                <columns>sourceSystem,dataObject,attribute,parameter,inclExcl,parameterValue</columns>
            </region>

            <region path="/plan/cns_material_incl">
                <columns>sourceSystem,localMaterialNumber,planningType,localPlant,inclusionType</columns>
            </region>

            <region path="/plan/cns_material_plan_status">
                <columns>
                    sourceSystem,localMaterialNumber,localPlant,materialNumber,localParentCode,ppc,active,dpRelevant,spRelevant,parentActive,noPlanRelevant
                </columns>
            </region>

        </regions>
    </curation>
</adf-curation>
