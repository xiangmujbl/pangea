<adf-curation>
    <curation mainRegion="/ems/ems_f_mdm_countries" viewRegion="/pangea/edm/country_v1" chunkSize="1000" chunkBytes="40096"
              partitionPerServer="2" parallelism="2"
              executionClassName="com.jnj.pangea.edm.country.controller.EDMCountryController">
        <regions>

            <region path="/ems/ems_f_mdm_countries">
                <columns>
                    zSourceSystem,mdmCode,zEntCodeIso3166Alpha2,mdmName
                </columns>
                <relations>
                    <relation path="/pangea/edm/source_system_v1" isPrimaryKey="true">
                        <expression>localSourceSystem=/ems/ems_f_mdm_countries.zSourceSystem</expression>
                    </relation>
                    <relation path="/ems/ems_f_mdm_countries_clone" isPrimaryKey="false">
                        <expression></expression>
                    </relation>
                </relations>
            </region>

            <region path="/pangea/edm/source_system_v1">
                <columns>
                    localSourceSystem,localSourceSystemName,sourceSystem,sourceSystemName
                </columns>
            </region>
            <region path="/ems/ems_f_mdm_countries" alias="/ems/ems_f_mdm_countries_clone">
                <columns>
                    zSourceSystem,zCode,zEntCodeIso4217Alpha,zName,zIso4217Numeric
                </columns>

            </region>

            <region path="/pangea/edm/country_v1">
                <columns>
                    sourceSystem,localCountry,countryCode,countryName,consumerPlanningRegion
                </columns>
            </region>

        </regions>
    </curation>
</adf-curation>
