<adf-curation>
    <curation mainRegion="/edm/mfg_order" viewRegion="/omp/gdm_bom" chunkSize="1000" chunkBytes="40096"
              executionClassName="com.jnj.pangea.omp.gdm_bom.controller.OMPGdmBomController2"
              writeTo="all" topic="PANGEA_V1_omp_gdm_bom3">
        <regions>

            <region path="/edm/mfg_order">
                <columns>sourceSysCd,actRlseDt,ordrRtngNum,mfgOrdrNum,plntCd</columns>
                <relations>
                    <relation path="/edm/mfg_order_rtng" isPrimaryKey="false">
                        <expression>ordrRtngNum=/edm/mfg_order_rtng.ordrRtngNum</expression>
                    </relation>

                    <relation path="/edm/mfg_order_seq" isPrimaryKey="false">
                        <expression>ordrRtngNum=/edm/mfg_order_seq.ordrRtngNum</expression>
                    </relation>

                    <relation path="/plan/cns_plan_parameter" isPrimaryKey="false">
                        <expression>sourceSysCd=/plan/cns_plan_parameter.sourceSystem</expression>
                    </relation>

                </relations>
            </region>

            <region path="/edm/mfg_order_rtng">
                <columns>ordrRtngNum,operNum</columns>
            </region>

            <region path="/edm/mfg_order_seq">
                <columns>ordrRtngNum</columns>
            </region>

            <region path="/plan/cns_plan_parameter">
                <columns>attribute,sourceSystem,dataObject,parameterValue</columns>
            </region>

            <region path="/omp/gdm_bom">
                <columns>bomId,active,activeFCTERP,activeOPRERP,activeSOPERP,comments,endEff,locationId,startEff</columns>
            </region>

        </regions>
    </curation>
</adf-curation>