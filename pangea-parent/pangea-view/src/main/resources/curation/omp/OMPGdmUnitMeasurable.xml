<adf-curation>
    <curation mainRegion="/plan/cns_plan_unit" viewRegion="/omp/gdm_unit" chunkSize="1000" chunkBytes="40096"
              executionClassName="com.jnj.pangea.omp.gdm_unit_measurable.controller.OMPGdmUnitMeasurableController"
              writeTo="all" topic="PANGEA_V1_gdm_unit_measure">
        <regions>

            <region path="/plan/cns_plan_unit">
                <columns>
                    localUom,localUomName,plantFlag,sourceSystem,unit,factor,roundingDecimal
                </columns>
                <relations>
                    <relation path="/edm/unit_of_measure_v1" isPrimaryKey="true">
                        <expression>uom=/plan/cns_plan_unit.unit</expression>
                    </relation>
                </relations>
            </region>

            <region path="/edm/unit_of_measure_v1">
                <columns>
                    uom,factor,isoCode,uomName,measure,roundingDecimal,localUom,sourceSystem
                </columns>
            </region>

            <region path="/omp/gdm_unit">
                <columns>
                    unitId,active,activeFCTERP,activeOPRERP,activeSOPERP,factor,isoCode,longDescription,measure,precision,shortDescription
                </columns>
            </region>

        </regions>
    </curation>
</adf-curation>