<adf-curation>
    <curation mainRegion="/edm/country_v1" viewRegion="/omp/gdm_country" chunkSize="1000" chunkBytes="40096"
              executionClassName="com.jnj.pangea.omp.gdm_country.controller.OMPGdmCountryController"
              writeTo="all" topic="omp_gdm_country">
        <regions>

            <region path="/edm/country_v1">
                <columns>countryName,countryCode,localCountry,sourceSystem</columns>
                <relations>
                    <relation path="/plan/cns_plan_parameter" isPrimaryKey="false">
                        <expression>sourceSystem=/edm/country_v1.sourceSystem</expression>
                    </relation>
                </relations>
            </region>

            <region path="/plan/cns_plan_parameter">
                <columns>sourceSystem,dataObject,attribute,parameter,inclExcl,parameterValue</columns>
            </region>

            <region path="/omp/gdm_country">
                <columns>countryId,activeFCTERP,activeOPRERP,activeSOPERP,countryDescription,mrc</columns>
            </region>

        </regions>
    </curation>
</adf-curation>