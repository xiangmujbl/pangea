<adf-curation>
    <curation mainRegion="/edm/country_v1" viewRegion="/omp/gdm_country" chunkSize="1000" chunkBytes="40096"
              executionClassName="com.jnj.pangea.omp.gdm_country.controller.OMPGdmCountryController"
              writeTo="all" topic="PANGEA_V1_omp_gdm_country">
        <regions>

            <region path="/edm/country_v1">
                <columns>countryName,countryCode,localCountry,sourceSystem</columns>
                <relations>
                    <relation path="/plan/cns_plan_parameter" isPrimaryKey="false">
                        <expression>sourceSystem=/edm/country_v1.sourceSystem</expression>
                    </relation>

                    <relation path="/plan/edm_country_input" isPrimaryKey="false">
                        <expression>sourceSystem=/edm/country_v1.sourceSystem,localCountry=/edm/country_v1.localCountry
                        </expression>
                    </relation>
                </relations>
            </region>


            <region path="/plan/edm_country_input">
                <columns>sourceSystem,localCountry,localCurrency</columns>
                <relations>
                    <relation path="/edm/currency_v1" isPrimaryKey="false">
                        <expression>
                            sourceSystem=/plan/edm_country_input.sourceSystem,
                            localCurrency=/plan/edm_country_input.localCurrency
                        </expression>
                    </relation>

                </relations>
            </region>


            <region path="/edm/currency_v1">
                <columns>sourceSystem,localCurrency,currencyCode</columns>
            </region>

            <region path="/plan/cns_plan_parameter">
                <columns>sourceSystem,dataObject,attribute,parameter,inclExcl,parameterValue</columns>
            </region>

            <region path="/omp/gdm_country">
                <columns>countryId,activeFCTERP,activeOPRERP,activeSOPERP,countryDescription,mrc,currencyId</columns>
            </region>

        </regions>
    </curation>
</adf-curation>