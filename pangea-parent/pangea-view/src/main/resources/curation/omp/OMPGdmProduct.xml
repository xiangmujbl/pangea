<adf-curation>
    <curation mainRegion="/edm/material_global_v1" viewRegion="/omp/product" chunkSize="1000" chunkBytes="40096"
              executionClassName="com.jnj.pangea.omp.product.controller.OMPProductController">
        <regions>

            <region path="/edm/material_global_v1">
                <columns>
                    localDPParentCode,primaryPlanningCode,refDescription,refDescription,materialGroup,productFamily,form ,category,subBrand,brand,franchise,globalBusinessUnit,refDescription,localManufacturingTechnology
                </columns>
                <relations>
                    <relation path="/plan/cns_material_plan_status" isPrimaryKey="false">
                        <expression>
                            localMaterialNumber=/edm/material_global_v1.localMaterialNumber,
                            localPlant=/edm/material_global_v1.localPlant
                        </expression>
                    </relation>
                    <relation path="/edm/product_family_v1" isPrimaryKey="false">
                        <expression>productFamily=/edm/material_global_v1.productFamily</expression>
                    </relation>
                    <relation path="/edm/form_v1" isPrimaryKey="false">
                        <expression>formName=/edm/material_global_v1.form</expression>
                    </relation>
                    <relation path="/edm/category_v1" isPrimaryKey="false">
                        <expression>category=/edm/material_global_v1.category</expression>
                    </relation>
                    <relation path="/edm/sub_brand_v1" isPrimaryKey="false">
                        <expression>subBrand=/edm/material_global_v1.subBrand</expression>
                    </relation>
                    <relation path="/edm/brand_v1" isPrimaryKey="false">
                        <expression>brand=/edm/material_global_v1.brand</expression>
                    </relation>
                    <relation path="/edm/franchise_v1" isPrimaryKey="false">
                        <expression>franchise=/edm/material_global_v1.franchise</expression>
                    </relation>
                    <relation path="/edm/global_base_unit_v1" isPrimaryKey="false">
                        <expression>gbu=/edm/material_global_v1.globalBusinessUnit</expression>
                    </relation>
                    <relation path="/plan/cns_plan_unit" isPrimaryKey="false">
                        <expression>localUom=/edm/material_global_v1.localBaseUom</expression>
                    </relation>
                </relations>

            </region>
            <region path="/plan/cns_material_plan_status">
                <columns>
                    sourceSystem,localMaterialNumber,localPlant,materialNumber,localParentCode,ppc,active,dpRelevant,spRelevant,parentActive,noPlanRelevant
                </columns>
            </region>
            <region path="/edm/product_family_v1">
                <columns>
                    productFamily,productFamilyName
                </columns>
            </region>
            <region path="/edm/form_v1">
                <columns>
                    formName,formDescription
                </columns>
            </region>
            <region path="/edm/category_v1">
                <columns>
                    category,categoryName
                </columns>
            </region>
            <region path="/edm/sub_brand_v1">
                <columns>
                    subBrand,subBrandDescription
                </columns>
            </region>
            <region path="/edm/brand_v1">
                <columns>
                    brand,brandDescription
                </columns>
            </region>
            <region path="/edm/franchise_v1">
                <columns>
                    franchise,franchiseDescription
                </columns>
            </region>
            <region path="/edm/global_base_unit_v1">
                <columns>
                    gbu,gbuName
                </columns>
            </region>
            <region path="/plan/cns_plan_unit">
                <columns>
                    sourceSystem,localUom,localUomName,plantFlag,unit
                </columns>
            </region>


            <region path="/omp/product">
                <columns>
                    productId,active,activeFcterp,activeOprerp,activeSoperp,color,description,groes,isroot,issku,label,matkl,planningHierarchy1,planningHierarchy1Desc,planningHierarchy2,planningHierarchy2Desc,planningHierarchy3,planningHierarchy3Desc,planningHierarchy4,planningHierarchy4Desc,planningHierarchy5,planningHierarchy5Desc,planningHierarchy6,planningHierarchy6Desc,planningHierarchy7,planningHierarchy7Desc,prdha,shortDescription,sourceLocationId,subFranchise,technology,unitId
