<adf-curation xmlns="http://www.jnj.com/adf-curation">
    <curation mainRegion="/edm/purchase_order_oa_v1" viewRegion="/edm/purchase_order_oa_v1_aggr"
              chunkSize="1000" partitionPerServer="2" chunkBytes="40096" parallelism="2">

        <!--a simple aggregation test-->
        <regions>
            <region path="/edm/purchase_order_oa_v1" mvel="true">
                <columns>poNum,matlNum,recvQty</columns>
                <filter>matlNum==91661</filter>
                <aggregator>
                    <fields>
                        <field name="recvQty" aggr="SUM" type="NUMBER" scale="3"/>
                        <field name="matlNum" asKey="true"/>
                        <field name="poNum" asKey="true"/>
                    </fields>
                    <groupBy>
                        matlNum,poNum
                    </groupBy>
                </aggregator>
            </region>
            <region path="/edm/purchase_order_oa_v1_aggr">
                <columns>poNum,matlNum,recvQty</columns>
            </region>
        </regions>
    </curation>
</adf-curation>