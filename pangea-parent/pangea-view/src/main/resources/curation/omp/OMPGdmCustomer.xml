<adf-curation>
    <curation mainRegion="/plan/cns_dem_grp_asgn" viewRegion="/omp/gdm_customer" chunkSize="1000" chunkBytes="40096"
              executionClassName="com.jnj.pangea.omp.gdm_customer.controller.OMPGdmCustomerController"
              writeTo="all" topic="PANGEA_V1_omp_gdm_customer">
        <regions>

            <region path="/plan/cns_dem_grp_asgn">
                <columns>sourceSystem,countryAffiliate,customerId,demandGroup,channel,channelDescription,customerName,salesOrganization</columns>
                <relations>
                    <relation path="/plan/cns_clusters" isPrimaryKey="false">
                        <expression>countryId=/plan/cns_dem_grp_asgn.countryAffiliate</expression>
                    </relation>
                    <relation path="/edm/country_v1" isPrimaryKey="false">
                        <expression>localCountry=/plan/cns_dem_grp_asgn.countryAffiliate</expression>
                    </relation>
                </relations>
            </region>

            <region path="/plan/cns_clusters">
                <columns>countryId,sourceSystem,cluster,subCluster</columns>
            </region>

            <region path="/edm/country_v1">
                <columns>localCountry,sourceSystem,countryCode,countryName,consumerPlanningRegion</columns>
            </region>

            <region path="/omp/gdm_customer">
                <columns>customerId,active,activeFCTERP,activeOPRERP,activeSOPERP,channel,channelDescription,countryId,custCluster,distributionChannel,distributor,eCommerce,forecastSource,globalCustomerId,name,partner,partnerCountry,partnerName,partnerRegion,partnerRole,planningCustomerGroupID,regionId,salesOrganization,soldTo,sourceLocationId,subCluster</columns>
            </region>

        </regions>
    </curation>
</adf-curation>