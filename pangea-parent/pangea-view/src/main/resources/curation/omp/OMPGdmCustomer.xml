<adf-curation>
    <curation mainRegion="/plan/cns_dem_grp_asgn" viewRegion="/omp/gdm_customer" chunkSize="1000" chunkBytes="40096"
              executionClassName="com.jnj.pangea.omp.gdm_customer.controller.OMPGdmCustomerController">
        <regions>

            <region path="/plan/cns_dem_grp_asgn">
                <columns>countryAffiliate,customerId,demandGroup,channel,channelDescription,customerName,</columns>
                <relations>
                    <relation path="/plan/cns_clusters" isPrimaryKey="false">
                        <expression>countryID=/plan/cns_dem_grp_asgn.affiliateCountry</expression>
                    </relation>
                    <relation path="/edm/country_v1" isPrimaryKey="false">
                        <expression>localCountry=/plan/cns_dem_grp_asgn.affiliateCountry</expression>
                    </relation>
                </relations>
            </region>

            <region path="/plan/cns_clusters">
                <columns>countryId,cluster,subCluster</columns>
            </region>

            <region path="/edm/country_v1">
                <columns>localCountry,sourceSystem,countryCode,countryName,consumerPlanningRegion</columns>
            </region>

            <region path="/omp/gdm_customer">
                <columns>customerId,active,activeFCTERP,activeOPRERP,activeSOPERP,aggrSoldTo,channel,channelDescription,countryId,custCluster,distributionChannel,distributor,division,eCommerce,globalCustomerId,name,partner,partnerCountry,partnerName,partnerRegion,partnerRole,planningCustomerGroupId,regionId,salesOrganization,soldTo,sourceLocationId,subCluster,ucn</columns>
            </region>

        </regions>
    </curation>
</adf-curation>