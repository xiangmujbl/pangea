<adf-curation>
    <curation mainRegion="/plan/cns_plan_dem_grp" viewRegion="/omp/gdm_customer" chunkSize="1000" chunkBytes="40096"
              executionClassName="com.jnj.pangea.omp.gdm_customer.controller.OMPGdmCustomerController"
              writeTo="all" topic="PANGEA_V1_omp_gdm_customer">
        <regions>

            <region path="/plan/cns_plan_dem_grp">
                <columns>demandGroupId,sourceSystem,demandGroupDesc,localCurrency</columns>
                <relations>
                    <relation path="/plan/cns_dem_grp_asgn" isPrimaryKey="false">
                        <expression>demandGroup=/plan/cns_plan_dem_grp.demandGroupId,sourceSystem=/plan/cns_plan_dem_grp.sourceSystem
                        </expression>
                    </relation>
                    <relation path="/plan/cns_productcustomer" isPrimaryKey="true">
                        <expression>demandGroup=/plan/cns_plan_dem_grp.demandGroupId
                        </expression>
                    </relation>
                    <relation path="/edm/currency_v1" isPrimaryKey="true">
                        <expression>localCurrency=/plan/cns_plan_dem_grp.localCurrency,sourceSystem=/plan/cns_plan_dem_grp.sourceSystem
                        </expression>
                    </relation>
                </relations>
            </region>

            <region path="/plan/cns_dem_grp_asgn">
                <columns>sourceSystem,countryAffiliate,customerId,demandGroup,channel,salesOrganization</columns>
                <relations>
                    <relation path="/plan/cns_clusters" isPrimaryKey="false">
                        <expression>countryId=/plan/cns_dem_grp_asgn.countryAffiliate,sourceSystem=/plan/cns_dem_grp_asgn.sourceSystem</expression>
                    </relation>
                    <relation path="/edm/country_v1" isPrimaryKey="false">
                        <expression>localCountry=/plan/cns_dem_grp_asgn.countryAffiliate,sourceSystem=/plan/cns_dem_grp_asgn.sourceSystem</expression>
                    </relation>
                    <relation path="/plan/cns_cust_channel" isPrimaryKey="false">
                        <expression>salesOrg=/plan/cns_dem_grp_asgn.countryAffiliate,
                            sourceSystem=/plan/cns_dem_grp_asgn.sourceSystem,
                            channel=/plan/cns_dem_grp_asgn.channel
                        </expression>
                    </relation>
                </relations>
            </region>

            <region path="/plan/cns_clusters">
                <columns>countryId,sourceSystem,cluster,subCluster</columns>
            </region>

            <region path="/edm/country_v1">
                <columns>localCountry,sourceSystem,countryCode,countryName,consumerPlanningRegion</columns>
            </region>

            <region path="/plan/cns_cust_channel">
                <columns>sourceSystem,salesOrg,channel,channelDesc</columns>
            </region>

            <region path="/plan/cns_productcustomer">
                <columns>sourceSystem,demandGroup,productId</columns>
            </region>

            <region path="/edm/currency_v1">
                <columns>sourceSystem,localCurrency,currencyCode</columns>
            </region>

            <region path="/omp/gdm_customer">
                <columns>customerId,active,activeFCTERP,activeOPRERP,activeSOPERP,channel,channelDescription,countryId,CUST_Cluster,distributionChannel,distributor,eCommerce,forecastSource,globalCustomerId,name,partner,partnerCountry,partnerName,partnerRegion,partnerRole,planningCustomerGroupId,regionId,salesOrganization,soldTo,sourceLocationId,subClusterId,currencyId</columns>
            </region>

        </regions>
    </curation>
</adf-curation>