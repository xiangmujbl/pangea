<adf-curation>
    <curation mainRegion="/edm/capy_hdr" viewRegion="/omp/gdm_resource" chunkSize="1000" chunkBytes="40096"
              executionClassName="com.jnj.pangea.omp.gdm_resource.controller.OMPGdmResourceController"
              writeTo="all" topic="PANGEA_V1_omp_gdm_resource">
        <regions>

            <region path="/edm/capy_hdr">
                <columns>
                    capyDesc,plntCd,srcSysCd,capyNum,capyCatCd
                </columns>
                <relations>
                    <relation path="/edm/wrk_ctr" isPrimaryKey="false">
                        <expression>srcSysCd=/edm/capy_hdr.srcSysCd,capyNum=/edm/capy_hdr.capyNum</expression>
                    </relation>
                </relations>
            </region>

            <region path="/edm/wrk_ctr">
                <columns>
                    srcSysCd,capyNum,wrkCtrUsgCd,wrkCtrCd,wrkCtrTypeCd,wrkCtrNum
                </columns>
                <relations>
                    <relation path="/plan/cns_plan_parameter" isPrimaryKey="false">
                        <expression>attribute=/edm/wrk_ctr.srcSysCd,sourceSystem=/edm/wrk_ctr.srcSysCd</expression>
                    </relation>
                </relations>
            </region>

            <region path="/plan/cns_plan_parameter">
                <columns>
                    attribute,sourceSystem,dataObject,parameter,parameterValue,inclExcl
                </columns>
            </region>

            <region path="/omp/gdm_resource">
                <columns>
                    resourceId,active,activeOPRERP,activeSOPERP,description,locationId
                </columns>
            </region>

        </regions>
    </curation>
</adf-curation>