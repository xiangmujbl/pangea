<adf-curation>
    <curation mainRegion="/edm/material_global_v1" viewRegion="/omp/gdm_product_unit_conversion" chunkSize="1000"
              chunkBytes="40096"
              executionClassName="com.jnj.pangea.omp.gdm_product_unit_conversion.controller.GDMProductUnitConversionController"
              writeTo="all" topic="PANGEA_V1_gdm_product_unit_conversion">

        <regions>

            <region path="/edm/material_global_v1">
                <columns>
                    materialNumber,localDpParentCode,localBaseUom,primaryPlanningCode,localMaterialNumber
                </columns>
                <relations>
                    <relation path="/plan/cns_material_plan_status" isPrimaryKey="false">
                        <expression>materialNumber=/edm/material_global_v1.materialNumber</expression>
                    </relation>

                    <relation path="/edm/material_auom_v1" isPrimaryKey="false">
                        <expression>materialNumber=/edm/material_global_v1.materialNumber</expression>
                    </relation>
                </relations>
            </region>

            <region path="/plan/cns_material_plan_status">
                <columns>
                    localMaterialNumber,materialNumber,active,dpRelevant,spRelevant,localPlant,sourceSystem
                </columns>
            </region>

            <region path="/edm/material_auom_v1">
                <columns>
                    localMaterialNumber,localDenominator,localAuom,localNumerator,materialNumber
                </columns>
                <relations>
                    <relation path="/plan/cns_plan_unit" isPrimaryKey="false">
                        <expression>localUom=/edm/material_auom_v1.localAuom</expression>
                    </relation>
                </relations>
            </region>

            <region path="/plan/cns_plan_unit">
                <columns>
                    localUom,unit,localUomName,planFlag,sourceSystem
                </columns>
            </region>


            <region path="/omp/gdm_product_unit_conversion">
                <columns>
                    gdmProductUnitConversionId,active,activeFCTERP,activeOPRERP,activeSOPERP,factor,productId,unitId,comments
                </columns>
            </region>

        </regions>
    </curation>
</adf-curation>