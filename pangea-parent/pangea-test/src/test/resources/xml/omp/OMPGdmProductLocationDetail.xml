<adf-curation>
    <curation mainRegion="/plan/cns_material_plan_status" viewRegion="/omp/gdm_product_location_detail" chunkSize="1000" chunkBytes="40096"
              executionClassName="com.jnj.pangea.omp.gdm_product_location_detail.controller.OMPGdmProductLocationDetailController"
              writeTo="all" topic="gdm_omp_product_location_detail">
        <regions>

            <region path="/plan/cns_material_plan_status">
                <columns>
                    sourceSystem,localMaterialNumber,localPlant,materialNumber,localParentCode,ppc,active,dpRelevant,spRelevant,parentActive,noPlanRelevant
                </columns>
                <relations>
                    <relation path="/plan/cns_prod_loc_attrib" isPrimaryKey="false">
                        <expression>
                            localMaterialNumber=/plan/cns_material_plan_status.localMaterialNumber,
                            localPlant=/plan/cns_material_plan_status.localPlant,
                            sourceSystem=/plan/cns_material_plan_status.sourceSystem
                        </expression>
                    </relation>
                </relations>
            </region>

            <region path="/plan/cns_prod_loc_attrib">
                <columns>
                    sourceSystem,localMaterialNumber,localPlant,schdAttrbName1,schAttrbDesc1,schdAttrbName2,schAttrbDesc2,schdAttrbName3,schAttrbDesc3
                </columns>
                <relations>
                    <relation path="/edm/material_global_v1" isPrimaryKey="false">
                        <expression>
                            localMaterialNumber=/omp/cns_prod_loc_attrib.localMaterialNumber,
                            sourceSystem=/omp/cns_prod_loc_attrib.sourceSystem
                        </expression>
                    </relation>
                </relations>
            </region>

            <region path="/edm/material_global_v1">
                <columns>
                    sourceSystem,localMaterialNumber,primaryPlanningCode
                </columns>
            </region>

            <region path="/omp/gdm_product_location_detail">
                <columns>
                    productLocationDetailId,activeOPRERP,activeSOPERP,CLASS,comments,description,name,productLocationId,unit,value
                </columns>
            </region>

        </regions>
    </curation>
</adf-curation>